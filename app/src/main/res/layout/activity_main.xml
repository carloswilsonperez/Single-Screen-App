<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cafe_scene"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="logo image"
            android:scaleType="fitXY"
            android:src="@drawable/ice" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cafe_scene"
            android:layout_marginBottom="24dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="@string/description"
            android:textAlignment="center"
            android:textColor="#ca2c92"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/phone_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@id/description"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:src="@mipmap/phone" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/phone_icon"
            android:layout_below="@id/description"
            android:layout_toRightOf="@id/phone_icon"
            android:layout_marginLeft="16dp"
            android:paddingTop="4dp"
            android:text="+524001231234"
            android:textColor="#ca2c92"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@+id/phone_icon"
            android:layout_alignStart="@+id/phone_icon"
            android:layout_marginBottom="16dp"
            android:src="@mipmap/email" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/email_icon"
            android:layout_alignStart="@id/phone"
            android:layout_alignTop="@id/email_icon"
            android:paddingTop="4dp"
            android:text="contact@icesoup.com"
            android:textColor="#ca2c92"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/address_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@id/email_icon"
            android:layout_alignStart="@+id/email_icon"
            android:layout_marginBottom="16dp"
            android:src="@mipmap/location" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/address_icon"
            android:layout_alignStart="@+id/email"
            android:layout_alignTop="@id/address_icon"
            android:paddingTop="4dp"
            android:text="Isla Tobago 2981, Guadalajara, Mx"
            android:textColor="#ca2c92"
            android:textSize="18sp" />

    </RelativeLayout>
</ScrollView>
